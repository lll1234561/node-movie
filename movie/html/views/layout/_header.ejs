<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>电影列表</title>
    <link href="/css/bootstrap.css " rel="stylesheet">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://cdn.bootcdn.net/ajax/libs/holder/2.9.7/holder.js"></script>
    <link href="/css/app.css " rel="stylesheet">
</head>
<body>
     <!-- 导航条 start-->
     <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">小电影</a>
          </div>
      
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class=""><a href="/">首页 <span class="sr-only">(current)</span></a></li>
              <li class=""><a href="/">首页 <span class="sr-only">(current)</span></a></li>
              <% let leixin = [...types].slice(0,6);%>
              <% for(let i=0;i<leixin.length;i++){%>
                <li <%if(leixin[i] === request.query.type){%> class="active" <% } %>><a href="/movies?type=<%= leixin[i] %>"><%= leixin[i] %></a></li>   
                <% } %>
                </ul>
            <form class="navbar-form navbar-left" action="/movies" method="get">
              <div class="form-group">
                <input type="text" value="<%= request.query.keywords ? request.query.keywords: '' %>" name="keywords"class="form-control" placeholder="关键字">
              </div>
              <button type="submit" class="btn btn-default">搜索</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
              <% if(request.session && request.session.uid && request.session.email){ %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= request.session.email%><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">我的收藏</a></li>
                  <li><a href="#">我的足迹</a></li>
                  
                  <li role="separator" class="divider"></li>
                  <li><a href="/logout">退出</a></li>
                </ul>
              </li>
              <% }else{ %>
                <li class="dropdown">
                <a href="/login"  role="button" aria-haspopup="true" >登陆</a>
                
                </li>
                <li class="dropdown"></li>
                <a href="/register"  role="button" aria-haspopup="true" >注册</a>
                </li>
                <%}%>
                
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>

    <!-- 导航条 end-->